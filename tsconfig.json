// tsconfig.json
{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "baseUrl": ".",
    "paths": {
      "@utils/*": [
        "utils/*"
      ],
      "@temp/*": [
        "temp/*"
      ],
      "@media/*": [
        "media/*"
      ],
      "@pages/*": [
        "pages/*"
      ]
    }
  }
}
